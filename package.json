{
  "name": "martins-giberts.github.io",
  "version": "2.0.1",
  "main": "index.js",
  "repository": "https://github.com/martins-giberts/martins-giberts.github.io.git",
  "author": "Martins Giberts <martins.giberts@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/styled-components": "^4.1.10",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^1.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "path": "0.12.7",
    "prettier": "^1.16.4",
    "react-test-renderer": "16.8.3",
    "ts-config": "^20.9.0",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3333",
    "webpack": "4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "scripts": {
    "build-dll": "webpack --config webpack/webpack.library.ts",
    "build": "yarn build-dll && webpack --config webpack/webpack.config.ts",
    "build:prod": "NODE_ENV=production yarn build",
    "dev": "yarn build-dll && webpack-dev-server --config webpack/webpack.config.ts",
    "prettier": "prettier --write '**/*.{ts,tsx,md,json}'"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "echo $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md,json}": [
      "yarn prettier"
    ]
  }
}
