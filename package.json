{
  "name": "martins-giberts.github.io",
  "version": "2.0.1",
  "main": "index.js",
  "repository": "https://github.com/martins-giberts/martins-giberts.github.io.git",
  "author": "Martins Giberts <martins.giberts@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/styled-components": "^4.1.10",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^1.0.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "lint-staged": "^8.1.4",
    "path": "0.12.7",
    "prettier": "^1.16.4",
    "react-test-renderer": "16.8.2",
    "ts-config": "^20.9.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3",
    "webpack": "4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "scripts": {
    "build-dll": "webpack --config webpack/webpack.library.ts",
    "build": "yarn build-dll && webpack --config webpack/webpack.config.ts",
    "build:prod": "NODE_ENV=production yarn build",
    "dev": "yarn build-dll && webpack-dev-server --config webpack/webpack.config.ts",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "prettier": "prettier --write '**/*.{ts,tsx}'"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build:prod && git add .",
      "commit-msg": "echo $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": ["yarn lint --fix", "yarn prettier", "git add ."]
    }
  }
}
